#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    if [[ $(uname) == "Darwin" ]]; then
        selected=$(find ~ ~/Developer/Work ~/Developer/Personal ~/Development/tools -mindepth 1 -maxdepth 2 -type d -path /Users/teksystems/.Trash -prune -o -print | fzf)
    else
        selected=$(find ~ ~/Development -mindepth 1 -maxdepth 2 -type d -print | fzf)
    fi
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name
